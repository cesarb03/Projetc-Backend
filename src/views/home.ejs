<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trabajo Final</title>
    <!-- BOOTSTRAP -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
</head>
<body>
    <div class="container">

        <!-- FORM MESSAGE -->

        <h2 class="mt-5 bg-dark text-white w-50 text-center">CHAT</h2>
        <form id="formMessage" class="my-3">
            <input id="userEmail" name="email" type="email" placeholder="user@mail.com" class="form-control w-50 my-2">
            <input id="messageInput" name="message" type="text" placeholder="Message..." class="form-control w-50 my-2">
            <button type="submit" class="btn btn-dark">Send</button>
        </form>
        <!-- CHAT -->
        <div class="my-3 w-75">
            <h3 class="my-3">MESSAGES</h3>
            <div id="messagesPool" class="my-3 w-75 row">
            </div>
        </div>
    </div>

    <!-- SCRIPTS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/client.js" type="module"></script>
</body>
</html>